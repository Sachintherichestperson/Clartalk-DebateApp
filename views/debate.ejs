<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClarTalk Debates</title>
    <link rel="stylesheet" href="./stylesheets/debate.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <script type="module" src="/firebase-notification.js"></script>
</head>
<body>
    <section class="container">
        <header>
            <div class="branding">
                <img src="/images/nav.png" alt="ClarTalk Logo">
                
            </div>
            <nav class="navigation">
                <a href="/" class="nav-link">
                    <i class="fas fa-tv"></i> Live
                </a>
                <a href="debate" class="nav-link active">
                    <i class="fas fa-comments"></i> Entertainment
                </a>
                <a href="podcast" class="nav-link">
                    <i class="fas fa-podcast"></i> Podcasts
                </a>
                <a href="/community" class="nav-link ">
                    <i class="fas fa-users"></i> Community
                </a>
                <a href="/creator/opponent-requests/<%= user._id %>" class="nav-link">
                    <i class="fas fa-envelope"></i> Requests
                </a>
                <a href="/LeaderBoard" class="nav-link">
                    <i class="fas fa-trophy"></i> Leaderboard
                </a>
                <a href="/MUN-competetion" class="nav-link">
                    <i class="fas fa-globe"></i> MUN
                </a>
                <a href="/Notification" class="nav-link">
                    <i class="fas fa-bell"></i> Notifications
                </a>
                <a href="/profile" class="nav-link">
                    <i class="fas fa-user"></i> Profile
                </a>
            </nav>
        </header>
        <div id="notification-container"></div>
            <div class="page">
                <% vedios.forEach(function(video) { %>
                    <div class="videos">
                        <a href="/debate/<%= video._id %>">
                            <img src="data:image/jpeg;base64,<%= video.Thumbnail.toString('base64') %>" alt="debates">
                            <div class="video-details">
                                <p class="video-title"><%= video.title %></p>
                                <p class="video-time"><%= video.createdAt.toLocaleDateString('en-GB') %></p>
                                <p class="Views"><%= video.Views %> Views</p>
                            </div>
                        </a>
                    </div>
                <% }) %>                
            </div>
        </div>
        <div class="instruction">
            No More Videos
        </div>
    </section>
</body>
</html>
