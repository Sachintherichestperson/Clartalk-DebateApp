<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/community.css">
<style>
.page {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30px 0;
    width: 100%;
}

nav {
    width: 95%;
    text-align: center;
    margin-bottom: 40px;
    background-color: #1e1e1e;;
}

h1 {
    color: white;
    font-size: 2.5rem;
    margin-bottom: 10px;
}

.Count {
    font-size: 1.2rem;
    color: #ccc;
}
.buttons{
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 10px;
    background-color: #1e1e1e;
    align-items: center;
}
.Delete{
    padding: 10px;
    background-color: #c20000;
    color: white;
    width: 40%;
    text-align: center;
    border-radius: 20px;
}
.Edit{
    padding: 10px;
    background-color: #0303a5;
    color: white;
    width: 40%;
    text-align: center;
    border-radius: 20px;
}
    </style>
</head>
<body>
    <section class="page">
        <nav>
            <h1>Uploaded Content</h1>
            <div class="Count">
                <p class="length">Total Content: <%= communities.communities.length %></p>
            </div>
        </nav>

    <main class="page">
        <% communities.communities.forEach(function(community) { %>
            <section class="group">
                <div class="chat">
                    <strong class="community-name"><%= community.CommunityName %></strong>
                    <div class="msg">
                        <p><span>About:</span> <%= community.CommunityisAbout %></p>
                    </div>
                    <div class="buttons">
                        <a href="/creator/delete-community/<%= community._id %>" class="Delete">Delete</a>
                        <a href="#" class="Edit">Edit</a>
                    </div>
                </div>
            </section>
        <% }) %>
        </main>
    </section>
    <script type="module" src="/firebase-notification.js"></script>
</body>
</html>