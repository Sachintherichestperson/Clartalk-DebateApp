<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
body {
    background-color: #121212;
    font-family: 'Roboto', sans-serif;
    margin: 0;
    color: #ffffff;
    overflow-x: hidden;
}

.container {
    width: 100%;
    height: 100%;
}

header {
    background-color: #1e1e1e;
    padding: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
}
.branding {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 1200px;
    height: 100px;
    position: relative;
    left: 200px;
}

.branding img {
    height: 200px;
    width: 200px;
    object-fit: contain;
}
.search-bar {
    flex: 1;
    margin-left: 20px;
    display: flex;
    align-items: center;
}
.search-bar input {
    width: 100%;
    max-width: 500px;
    background-color: #333;
    border: none;
    border-radius: 25px;
    padding: 12px 20px;
    font-size: 16px;
    color: #ffffff;
    outline: none;
    transition: all 0.3s ease;
}

.search-bar input:hover {
    background-color: #444;
}

.search-bar input:focus {
    background-color: #444;
    transform: scale(1.05);
}
/* Navigation Bar */
.navigation {
    display: flex;
    justify-content: center;
    gap: 20px;
    width: 100%;
    max-width: 1200px;
    margin-top: 10px;
}
.nav-link {
    color: #ffffff;
    text-decoration: none;
    padding: 10px 20px;
    background: linear-gradient(135deg, #444, #333);
    border-radius: 20px;
    font-size: 16px;
    font-weight: 500;
    transition: all 0.3s ease;
}

.nav-link:hover {
    background: linear-gradient(135deg, #ff5722, #ff9800);
    transform: scale(1.1);
}

.navigation a:hover, .navigation a.active {
    background: linear-gradient(135deg, #ff5722, #ff9800);
    color: white;
    box-shadow: 0 4px 10px rgba(255, 87, 34, 0.5);
}

.page{
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    justify-content: center;
    padding: 40px 20px;
    max-width: 1200px;
    margin: auto;
}

/* Box Styling */
.box {
    width: 380px;
    background: linear-gradient(145deg, #1e293b, #2d3748); /* Elegant gradient background */
    border-radius: 15px;
    overflow: hidden;
    position: relative;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.8);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.box:hover {
    transform: translateY(-15px) scale(1.02);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.9);
}

/* Banner Section */
.box-banner {
    width: 100%;
    height: 200px;
    background: radial-gradient(circle at center, #0066ff, #003366);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
}


.box-banner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.box-banner::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 150%;
    height: 150%;
    background: rgba(255, 255, 255, 0.1);
    transform: rotate(45deg);
    pointer-events: none;
}

/* Competition Name */
.competition-name {
    padding: 20px;
    text-align: center;
    color: #ffffff;
}

.competition-name h4 {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 10px;
    text-transform: uppercase;
}

.competition-name p {
    font-size: 16px;
    line-height: 1.5;
    color: #d1d5db; /* Soft text color */
}

/* Button Styling */
#routetag {
    display: block;
    width: 80%;
    margin: 20px auto;
    padding: 12px 0;
    background: linear-gradient(135deg, #22c55e, #16a34a); /* Vibrant green gradient */
    color: #ffffff;
    font-size: 18px;
    font-weight: bold;
    text-transform: uppercase;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    box-shadow: 0 5px 15px rgba(34, 197, 94, 0.5);
    transition: background 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
    text-align: center;
    text-decoration: none;
}

#routetag:hover {
    background: linear-gradient(135deg, #16a34a, #166534);
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(22, 165, 52, 0.6);
}


</style>
</head>
<body>
    <section class="container">
        <header>
            <div class="branding">
                <img src="/images/nav.png" alt="ClarTalk Logo">
                <div class="search-bar">
                    <input type="text" placeholder="Search topics, debates...">
                </div>
            </div>
            <nav class="navigation">
                <a href="/creator/content/<%= user._id %>" class="nav-link">
                    <i class="fas fa-comments"></i> Content
                </a>
                <a href="/creator/creator/Debates/<%= user._id %>" class="nav-link">
                    <i class="fas fa-podcast"></i> Debates
                </a>
                <a href="/creator/creator/community/<%= user._id %>" class="nav-link ">
                    <i class="fas fa-users"></i> Community
                </a>
                <a href="" class="nav-link active">
                    <i class="fas fa-trophy"></i> MUN
                </a>
            </nav>
        </header>
        <div class="page">
            <% competitions.forEach(function(competition) { %>
            <div class="box">
                <div class="box-banner">
                    <img src="data:image/jpeg;base64,<%= competition.CompetitionDP.toString('base64') %>" alt="MUN-IMAGE">
                </div>
                <div class="competition-name">
                    <h4><%= competition.CompetitionName %></h4>
                    <p><%= competition.CompetitionisAbout %></p>
                </div>
                <a href="/Discover-Page-of-MUN/<%= competition._id %>" id="routetag">Check It</a>
            </div>
            <% }) %>
        </div>
    </section>
    <script type="module" src="/firebase-notification.js"></script>
</body>
</html>