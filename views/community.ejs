<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ClarTalk Community</title>
    <link rel="stylesheet" href="./stylesheets/community.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .Button-instruction{
            padding: 10px;
            background: linear-gradient(135deg,#ff5722,#ff9800);
            color: white;
            text-decoration: none;
            border-radius: 30px;
            font-size: 17px;
            position: relative;
            box-shadow: 0 4px 10px rgba(255,87,34,.5);
        }
        .Button-instruction:hover{
            background: linear-gradient(135deg,#ff9800,#ff5722);
            transform: scale(1.5);
        }
        </style>
</head>
<body>
    <section class="container">
        <header>
            <div class="branding">
                <img src="/images/nav.avif" alt="ClarTalk Logo">    
            </div>
            <nav class="navigation">
                <a href="/" class="nav-link">
                    <i class="fas fa-tv"></i> Live
                </a>
                <a href="debate" class="nav-link">
                    <i class="fas fa-comments"></i> Entertainment
                </a>
                <a href="podcast" class="nav-link">
                    <i class="fas fa-podcast"></i> Podcasts
                </a>
                <a href="/community" class="nav-link active" id="active-tab">
                    <i class="fas fa-users"></i> Community
                </a>
                <a href="/creator/opponent-requests/<%= user._id %>" class="nav-link">
                    <i class="fas fa-envelope"></i> Requests
                </a>
                <a href="/LeaderBoard" class="nav-link">
                    <i class="fas fa-trophy"></i> Leaderboard
                </a>
                <a href="/MUN-competetion" class="nav-link">
                    <i class="fas fa-globe"></i> MUN
                </a>
                <a href="/Notification" class="nav-link">
                    <i class="fas fa-bell"></i> Notifications
                </a>
                <a href="/profile" class="nav-link">
                    <i class="fas fa-user"></i> Profile
                </a>
            </nav>
        </header>
        <main class="page">
            <% communities.forEach(function(community) { %>
                <section class="group">
                    <div class="chat">
                        <strong class="community-name"><%= community.CommunityName %></strong>
                        <div class="msg">
                            <p><span>About:</span> <%= community.CommunityisAbout %></p>
                        </div>
                        <a href="/community-chat/<%= community._id %>">
                            <div class="button">Join Chat</div>
                        </a>
                    </div>
                </section>
            <% }) %>
            </main>
            <div class="instruction">
                <p>Click on the button below to create a Community</p>
                <a href="/creator//Building-The-Community" class="Button-instruction">Create Community</a>
            </div>
    </section>
    <script type="module" src="/firebase-notification.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
    let activeTab = document.getElementById("active-tab");
    if (activeTab) {
        activeTab.scrollIntoView({ behavior: "smooth", inline: "center" });
    }
});
    </script>
</body>
</html>
